        lines.extend(common_lines)
        lines.append('}')
    elif ty == "10": # external
        i['resource_type'] = 'zabbix_item_external'
        lines.append('resource "{}" "{}" {{'.format(i['resource_type'], i['key_safe']))
        lines.extend(common_lines)
        lines.append('}')
    elif ty == "15": # calculated 
        i['resource_type'] = 'zabbix_item_calculated'
