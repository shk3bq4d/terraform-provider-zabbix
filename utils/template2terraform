    elif ty == "5": # internal
        i['resource_type'] = 'zabbix_item_internal'
        lines.append('resource "{}" "{}" {{'.format(i['resource_type'], i['key_safe']))
        lines.extend(common_lines)
        lines.append('}')
    elif ty == "8": # aggregate
        i['resource_type'] = 'zabbix_item_aggregate'
